@{
    ViewData["Title"] = "系統登入";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        .login-container h2 {
            margin-bottom: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group button {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .form-group button:hover {
            background-color: #0056b3;
        }

        .error-message {
            color: red;
            margin-top: 10px;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" 
            integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
    <script>

        $(document).ready(function () {
            //'use strict';
            var root = '@Url.Content("~/")';
            window.appRoot = {
                rel: root,
                full: location.origin + root
            };

            new Vue({
                el: '#app',
                data: {
                    username: '',
                    password: '',
                    selectedCampus: 1,
                    campuses: [],
                    errorMessage: '',
                },
                mounted() {
                    this.getCampuses();
                },
                methods: {
                    getCampuses() {
                        // 發送 AJAX GET 請求以獲取所有校區數據
                        fetch(`${window.appRoot.full}Api/Account/GetAllCampuses`)
                            .then(response => response.json())
                            .then(data => this.campuses = data)
                            .catch(error => console.error('Error fetching campuses:', error));
                    },
                    login() {
                        // 檢查用戶名、密碼和所選校區是否為空
                        if (this.username === '' || this.password === '' || this.selectedCampus === '') {
                            this.errorMessage = 'Please fill in all fields.';
                        } else {
                            // 清除錯誤消息
                            this.errorMessage = '';

                            // 構造登錄數據對象
                            const loginData = {
                                Username: this.username,
                                Password: this.password,
                                Campus: this.selectedCampus
                            };
                            console.log(loginData, `${window.appRoot.full}Api/Account/Login`)

                            // 發送 AJAX POST 請求以驗證登錄信息
                            fetch(`${window.appRoot.full}Api/Account/Login`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify(loginData)
                            })
                                .then(response => {
                                    if (response.ok) {
                                        // 登錄成功，跳轉到首頁或其他頁面
                                        window.location.href = `${window.appRoot.full}Home/EntryRecord`;
                                    } else {
                                        // 登錄失敗，顯示錯誤消息
                                        this.errorMessage = 'Invalid credentials.';
                                    }
                                })
                                .catch(error => console.error('Error logging in:', error));

                        }
                    }
                }
            });
        });

    </script>
</head>
<body>
    <div id="app" class="login-container">
        <h2>Login</h2>
        <div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" v-model="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" v-model="password" required>
            </div>
            <div class="form-group">
                <label for="campusDropdown">Campus</label>
                <select class="form-select" id="campusDropdown" v-model="selectedCampus">
                    <option v-for="campus in campuses" :value="campus.id">{{ campus.campusName }}</option>
                </select>
            </div>
            <div class="form-group">
                <button type="button" @@click="login">Login</button>
            </div>
            <div  class="error-message" style="display: none;">{{ errorMessage }}</div>
        </div>
    </div>
</body>
</html>
