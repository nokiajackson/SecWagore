<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecWagore</title>
    <link rel="stylesheet" href="~/lib/jquery-ui-1.13.3/jquery-ui.min.css" asp-append-version="true" />
    <environment include="Development">
        <link rel="stylesheet" href="~/js/vendor.bundle.css" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SecWagore.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @await Html.PartialAsync("_NavBar")
    <div class="container" id="app">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="liveToast" role="alert" aria-live="assertive" aria-atomic="true" class="toast hide" data-autohide="false">
        <div class="toast-header">
            <img src="..." class="rounded me-2" alt="...">
            <strong class="mr-auto">Message</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            {{toast_msg}}
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SecWagore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script>
        // import 'moment';

        (function (undefined) {
            var root = '@Url.Content("~/")';
            window.appRoot = {
                rel: root,
                full: location.origin + root
            }
        })();
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui-1.13.3/jquery-ui.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    
   @*  <script src="~/lib/bootstrap/dist/js/bootstrap-datepicker.min.js"></script>  *@
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
    <script src="https://rawgit.com/moment/moment/2.2.1/min/moment.min.js"></script>

    <environment include="Development">
        <script src="~/js/vendor.bundle.js"></script>
        <script src="~/js/app.bundle.js"></script>
    </environment>
    <script>
        //import moment from 'moment';
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
